<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#140430"
    tools:context=".AboutUs">

    <TextView
        android:id="@+id/aboutus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dip"
        android:text="About Us"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/studetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dip"
        android:text="Student's Details"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/maisarah"
        android:layout_width="350dip"
        android:layout_height="90dp"
        android:layout_below="@id/studetails"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="false"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="15dip"
        android:layout_marginRight="11dp"
        android:text="@string/maisarah"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="154dip"
        android:layout_height="100dip"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="130dip"
        android:layout_marginTop="188dip"
        app:srcCompat="@drawable/maisarah" />

    <TextView
        android:id="@+id/syahirah"
        android:layout_width="350dip"
        android:layout_height="90dp"
        android:layout_below="@id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="false"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="11dp"
        android:text="@string/syahirah"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="154dip"
        android:layout_height="100dip"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="130dip"
        android:layout_marginTop="390dip"
        app:srcCompat="@drawable/syahirah" />

</RelativeLayout>